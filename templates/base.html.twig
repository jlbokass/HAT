<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Gedimat par HAT |{% block title %} Bienvenue{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}

        {% block javascripts %}{% endblock %}
    </head>
    <body>

    {# read and display all flash messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-{{ label }}" style="width: 100%; height: 65px; background-color: #5eb5e0">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
             {% block body %}{% endblock %}
    </body>
</html>
