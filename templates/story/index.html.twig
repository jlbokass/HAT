{% extends 'base.html.twig' %}

{% block title %}Les histoires{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>Liste des histoires</h1>
    {% for story in stories %}
        <div>
            <h3><a href="{{ path('story_show', {'id' : story.id}) }}">{{ story.title }}</a></h3>
            <p>{{ story.content }}</p>
            <p>Publi√© le {{ story.createdAt| date("F jS \\a\\t g:ia") }}</p>
        </div>
    {% endfor %}
</div>
{% endblock %}
